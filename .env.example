# Environment variables for Whisper WebSocket Server
# Copy this file to .env and fill in the values

# Required: JWT secret for authentication (generate a secure random string)
SECRET_KEY=your-secure-secret-key-here

# Optional: Whisper model configuration
MODEL_NAME=small.en
WHISPER_LANG=en
COMPUTE_TYPE=int8

# Optional: Audio processing configuration
CHUNK_WINDOW_SEC=10.0
CHUNK_OVERLAP_SEC=2.0
SAMPLE_RATE=16000

# Optional: Server configuration
HOST=0.0.0.0
PORT=8000
